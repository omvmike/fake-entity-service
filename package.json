{
  "name": "fake-entity-service",
  "version": "0.9.1",
  "description": "A fake database entities service for testing",
  "author": {
    "email": "mike.onofrienko@clockwise.software",
    "name": "Mike Onofrienko"
  },
  "license": "MIT",
  "repository": {
    "type": "git",
    "url": "https://github.com/omvmike/fake-entity-service.git"
  },
  "scripts": {
    "build": "tsc --sourceMap",
    "test": "jest --coverage --detectOpenHandles",
    "version": "echo $npm_package_version",
    "migrate": "npx sequelize-cli db:migrate --env=local",
    "seed": "npx sequelize-cli db:seed:all --env=local"
  },
  "devDependencies": {
    "@faker-js/faker": "^9.7.0",
    "@types/jest": "27.0.2",
    "@types/node": "^18.11.18",
    "@types/sequelize": "^4.28.11",
    "@types/validator": "^13.7.10",
    "jest": "^29.7.0",
    "ts-jest": "^29.3.2",
    "pg": "^8.8.0",
    "reflect-metadata": "^0.1.13",
    "sequelize": "^6.29.0",
    "sequelize-cli": "^6.4.1",
    "sequelize-typescript": "2.1.6",
    "ts-loader": "^9.2.3",
    "ts-node": "^10.0.0",
    "tsconfig-paths": "^3.10.1",
    "typeorm": "^0.3.11",
    "typescript": "^4.3.5"
  },
  "peerDependencies": {
    "sequelize": "6.29.0",
    "typeorm": "^0.3.0"
  },
  "exports": {
    ".": "./dist/index.js",
    "./sequelize": "./dist/sequelize-fake-entity.service.js",
    "./typeorm": "./dist/typeorm-fake-entity.service.js"
  },
  "main": "dist/index.js",
  "files": [
    "dist/",
    "README.md",
    "LICENSE"
  ],
  "jest": {
    "projects": [
      {
        "displayName": "unit-tests",
        "moduleFileExtensions": [
          "js",
          "json",
          "ts"
        ],
        "rootDir": "src",
        "testRegex": ".*\\.spec\\.ts$",
        "transform": {
          "^.+\\.(t|j)s$": "ts-jest"
        },
        "collectCoverageFrom": [
          "**/*.(t|j)s"
        ],
        "coverageDirectory": "../coverage",
        "testEnvironment": "node",
        "maxWorkers": 1
      },
      {
        "displayName": "integration-tests",
        "moduleFileExtensions": [
          "js",
          "json",
          "ts"
        ],
        "rootDir": ".",
        "testRegex": ".*\\.int-spec\\.ts$",
        "transform": {
          "^.+\\.(t|j)s$": "ts-jest"
        },
        "testEnvironment": "node",
        "collectCoverageFrom": [
          "**/*.(t|j)s"
        ]
      }
    ]
  },
  "engines": {
    "node": ">=14.0.0"
  }
}
